{
  "compilerOptions": {
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "allowJs": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "declaration": true,
    "importHelpers": true,
    "outDir": "lib",
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "pretty": true,
    "removeComments": true,
    "useUnknownInCatchVariables": true,
    "exactOptionalPropertyTypes": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2021",
    "lib": [
      "ES2021"
    ],
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "#*": [
        "invertible/*"
      ],
      "@21gram-consulting/invertible#test/*": [
        "test/*"
      ],
      "@21gram-consulting/invertible": [
        "invertible/index.ts"
      ]
    }
  },
  "include": [
    "invertible/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "coverage",
    "tests",
    "dist"
  ],
  "typedocOptions": {
    "name": "Invertible Functions & Pipelines",
    "includeVersion": true,
    "entryPoints": "./invertible/index.ts",
    "entryPointStrategy": "Expand",
    "out": "var/docs",
    "disableSources": true,
    "readme": "./invertible/SUMMARY.md",
    "searchInComments": true,
    "navigationLinks": {
      "21Gram Consulting": "https://www.21gram.consulting",
      "GitHub": "https://github.com/21GramConsulting/invertible",
    }
  }
}