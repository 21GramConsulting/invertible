{
  "compilerOptions": {
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "allowJs": false,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "pretty": true,
    "removeComments": true,
    "useUnknownInCatchVariables": true,
    "exactOptionalPropertyTypes": true,
    "sourceMap": true,
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2018",
    "lib": [
      "ES2018"
    ],
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "lib",
    "declarationDir": "include",
    "paths": {
      "@21gram-consulting/invertible": [
        "./invertible/src/index.ts"
      ],
      "@21gram-consulting/invertible/pipe": [
        "./pipe/src/index.ts"
      ],
      "@21gram-consulting/invertible/utility": [
        "./utility/src/index.ts"
      ]
    },
  },
  "include": [
    "include/global.d.ts"
  ],
  "exclude": [
    "coverage",
    "dist"
  ],
  "typedocOptions": {
    "name": "Invertible Functions & Pipelines",
    "includeVersion": true,
    "entryPoints": [
      "./invertible/index.ts",
      "./pipe/index.ts",
      "./utility/index.ts"
    ],
    "entryPointStrategy": "Expand",
    "out": "var/docs",
    "disableSources": true,
    "readme": "./README.md",
    "searchInComments": true,
    "navigationLinks": {
      "21Gram Consulting": "https://www.21gram.consulting",
      "GitHub": "https://github.com/21GramConsulting/invertible"
    }
  },
  "watchOptions": {
    "fallbackPolling": "dynamicPriority",
    "watchDirectory": "useFsEvents",
    "watchFile": "useFsEvents"
  }
}